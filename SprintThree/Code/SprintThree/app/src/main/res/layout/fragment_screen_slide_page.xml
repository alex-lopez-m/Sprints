<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_imageId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/android_green"
        android:textIsSelectable="false"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/android_red"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/android_blue"
        android:textIsSelectable="false"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/android_darkorange"
        android:textIsSelectable="false"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imv_bling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/london"/>


</LinearLayout>
